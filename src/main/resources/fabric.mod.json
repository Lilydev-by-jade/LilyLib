{
  "schemaVersion": 1,
  "id": "lilylib",
  "version": "${version}",

  "name": "LilyLib",
  "description": "Library mod for Lilydev projects.",
  "authors": [
    "jadelily18"
  ],
  "contact": {
    "homepage": "https://lilydev.com/",
    "issues": "https://github.com/Lilydev-by-jade/LilyLib/issues",
    "sources": "https://github.com/Lilydev-by-jade/LilyLib"
  },

  "license": "LGPL-3.0",
  "icon": "assets/lilylib/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.lilydev.lilylib.LilyLib"
      }
    ]
  },
  "mixins": [
    "lilylib.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.18",
    "java": ">=17",
    "fabric-language-kotlin": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/TZAt4PA5av",
        "modmenu.kofi": "https://ko-fi.com/jadelily"
      }
    }
  }
